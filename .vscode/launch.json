{
    "configurations": [
        {
            "name": "C/C++: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CPP_00/ex01/phonebook",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/CPP_00/ex01/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: clang build active file",
            "miDebuggerPath": "${os == 'linux' ? '/usr/bin/gdb' : '/usr/bin/lldb'}"
        },
    ],
    "version": "2.0.0"
